{% style %}
  @media (max-width: {{ breakpoint | default: 750 }}px) {
    .{{ section_name }}--{{ section.id }} {
      {% unless section.settings.margin_top_mobile == 'default' %}
        margin-top: {{ section.settings.margin_top_mobile }} !important;
      {% endunless %}
      {% unless section.settings.margin_bottom_mobile == 'default' %}
        margin-bottom: {{ section.settings.margin_bottom_mobile }} !important;
      {% endunless %}
    }
  }
  @media (min-width: {{ breakpoint | default: 750 }}px) {
    .{{ section_name }}--{{ section.id }} {
      {% unless section.settings.margin_top_desktop == 'default' %}
        margin-top: {{ section.settings.margin_top_desktop }} !important;
      {% endunless %}
      {% unless section.settings.margin_bottom_desktop == 'default' %}
        margin-bottom: {{ section.settings.margin_bottom_desktop }} !important;
      {% endunless %}
    }
  }
{% endstyle %}
