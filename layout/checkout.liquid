    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}

    <script defer type="text/javascript">
      async function updateInsuranceItem() {
        const productHandle = '{{ settings.insurance_product }}'
        if (!productHandle) { return }

        let productData = null

        try {
          const productDataRes = await fetch(`/products/${productHandle}.js`)
          productData = await productDataRes.json()
        } catch(error) {
          console.error(error)
          return
        }

        if (!productData) { return }

        const insuranceItems = document.querySelectorAll(`[data-product-id="${productData.id}"]`)

        insuranceItems.forEach(item => {
          item.classList.add('product--insurance')
        })
      }


      document.addEventListener('page:load', updateInsuranceItem)
      document.addEventListener('page:change', updateInsuranceItem)
    </script>

    {% style %}
      .product--insurance .reduction-code,
      .product--insurance .product__price del,
      .product--insurance .product__price br {
        display: none;
      }
    {% endstyle %}
  </body>
