{{ 'featured-reviews.css' | asset_url | stylesheet_tag }}

<div class="featured-reviews featured-reviews--{{ section.id }}" role="region" aria-label="Featured Reviews">
  <div class="wrapper text-center">
    <small class="ui-label small--hide">{{ section.settings.intro }}</small>
    <h3>{{ section.settings.headline }}</h3>
    <small class="ui-label medium-up--hide">{{ section.settings.intro }}</small>

    {{ section.settings.stamped_widget }}
  </div>
</div>

