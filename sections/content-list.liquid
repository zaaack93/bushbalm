<script src="{{ 'content-list.js' | asset_url }}" defer="defer"></script>
{{ 'content-list.css' | asset_url | stylesheet_tag }}

<div class="content-list content-list--{{ section.id }}"
  data-scroll-to-uid="{{ section.settings.uid }}">
  <div class="content-list__wrapper content-list__wrapper--{{ section.settings.alignment }}">
    <div class="content-list__container">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.copy != blank %}
        <p>{{ section.settings.copy }}</p>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <h3>{{ section.settings.subheading }}</h3>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="content-list__blocks">
          {% for block in section.blocks %}
            <div class="content-list__block">
              {% if block.settings.icon != blank %}
                {% render 'responsive-image' with
                  image: block.settings.icon,
                  max_width: 48,
                  max_height: 48,
                  wrapper_class: 'content-list__block-icon'
                %}
              {% endif %}
              {% if block.settings.text != blank %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    <div class="content-list__image">
      {% if section.settings.image_mobile != blank %}
        {% render 'responsive-image' with
          image: section.settings.image_mobile,
          max_width: 654,
          max_height: 482,
          wrapper_class: 'content-list__image-wrapper large--hide'
        %}
      {% endif %}
      {% if section.settings.image_desktop != blank %}
        {% assign wrapper_class = 'content-list__image-wrapper' %}
        {% if section.settings.image_mobile != blank %}
          {% assign wrapper_class = wrapper_class | append: ' medium-down--hide' %}
        {% endif %}
        {% render 'responsive-image' with
          image: section.settings.image_desktop,
          max_width: 1294,
          max_height: 1294,
          wrapper_class: wrapper_class
        %}
      {% endif %}
    </div>
  </div>
</div>

{% render 'custom-spacing' with
  section_name: 'content-list'
%}

