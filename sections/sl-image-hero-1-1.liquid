{% liquid
  assign image = section.settings.image
  assign image_class = 'shoplift-image-alignment--' | append: section.id
  assign mobile_image_class = image_class | append: " shoplift-hero-image-mobile"

  if section.settings.mobile_image and section.settings.mobile_image != empty
    assign image_class = image_class | append: " shoplift-hero-image-desktop"
  endif

  case section.settings.section_height
    when 'small'
      assign height_vh = 40
      assign mobile_height_vh = 40
      assign height_padding = 24
      assign mobile_height_padding = 16
    when 'medium'
      assign height_vh = 60
      assign mobile_height_vh = 60
      assign height_padding = 32
      assign mobile_height_padding = 24
    when 'large'
      assign height_vh = 80
      assign mobile_height_vh = 80
      assign height_padding = 64
      assign mobile_height_padding = 48
    when 'xlarge'
      assign height_vh = 100
      assign mobile_height_vh = 100
      assign height_padding = 128
      assign mobile_height_padding = 80
  endcase

  case section.settings.mobile_section_height
    when 'small'
      assign mobile_height_vh = 40
      assign mobile_height_padding = 16
    when 'medium'
      assign mobile_height_vh = 60
      assign mobile_height_padding = 24
    when 'large'
      assign mobile_height_vh = 80
      assign mobile_height_padding = 48
    when 'xlarge'
      assign mobile_height_vh = 100
      assign mobile_height_padding = 80
  endcase

  case section.settings.section_width
    when 'small'
      assign width_padding = 25
      assign mobile_width_padding = 15
    when 'medium'
      assign width_padding = 15
      assign mobile_width_padding = 10
    when 'large'
      assign width_padding = 5
      assign mobile_width_padding = 5
  endcase

  case section.settings.mobile_image_position
    when 'match_desktop'
      case section.settings.image_position
        when 'right'
        assign mobile_image_position = "split"
        when 'left'
        assign mobile_image_position = "split"
        when 'background'
        assign mobile_image_position = "background"
      endcase
    when 'background'
      assign mobile_image_position = "background"
    when 'split'
      assign mobile_image_position = "split"
  endcase

  case section.settings.content_position
    when "top_left"
      assign text_alignment = "start"
    when "middle_left"
      assign text_alignment = "start"
    when "bottom_left"
      assign text_alignment = "start"
    when "top_center"
      assign text_alignment = "center"
    when "middle_center"
      assign text_alignment = "center"
    when "bottom_center"
      assign text_alignment = "center"
    when "top_right"
      assign text_alignment = "end"
    when "middle_right"
      assign text_alignment = "end"
    when "bottom_right"
      assign text_alignment = "end"
  endcase

  if section.settings.mobile_content_position == "match"
    assign mobile_content_position = section.settings.content_position
  else
    assign mobile_content_position = section.settings.mobile_content_position
  endif

  case mobile_content_position
    when "top_left"
      assign mobile_text_alignment = "start"
    when "middle_left"
      assign mobile_text_alignment = "start"
    when "bottom_left"
      assign mobile_text_alignment = "start"
    when "top_center"
      assign mobile_text_alignment = "center"
    when "middle_center"
      assign mobile_text_alignment = "center"
    when "bottom_center"
      assign mobile_text_alignment = "center"
    when "top_right"
      assign mobile_text_alignment = "end"
    when "middle_right"
      assign mobile_text_alignment = "end"
    when "bottom_right"
      assign mobile_text_alignment = "end"
  endcase

  assign anchor_button_bottom = empty
%}

<style>

  .shoplift--{{ section.id }}.sl-section {
    position: relative;
    {% if section.settings.image_position == 'left' or section.settings.image_position == 'right' %}
      display: grid;
      grid-template-columns: 1fr 1fr;
    {% else %}
      display: flex;
    {% endif %}

    {% if section.settings.background_color != 'rgba(0,0,0,0)' and section.settings.background_color != 'transparent' %}
      background-color: {{ section.settings.background_color }};
    {% endif %}

    {% if section.settings.border_color != 'rgba(0,0,0,0)' and section.settings.border_color != 'transparent' %}
      border-color: {{ section.settings.border_color }};
    {% endif %}

    {% unless section.settings.section_border == 'brand_style' %}
      {% case section.settings.section_border %}
        {% when 'none' %}
          border-width: 0;
        {% when 'bottom' %}
          border-width: 0 0 1px 0;
          border-style: solid;
        {% when 'all' %}
          border-width: 1px;
          border-style: solid;
      {% endcase %}
    {% endunless %}
  }

  {% if section.settings.devices == 'mobile' %}
    @media screen and (min-width: 768px) {
      .shoplift--{{ section.id }} {
        display: none !important;
      }
    }

  {% elsif section.settings.devices == 'desktop' %}
    @media screen and (max-width: 768px) {
      .shoplift--{{ section.id }} {
        display: none !important;
      }
    }
  {% endif %}

  .shoplift--{{ section.id }}--content {
    display: flex;
    text-align: {{ text_alignment }};
    flex: 1;
    z-index: 0;
  }

  .shoplift-alignment--{{ section.id }} {
    {% if text_alignment != 'right' %}
      margin-right: auto;
    {% endif %}
    {% if text_alignment != 'left' %}
      margin-left: auto;
    {% endif %}
  }

  @media screen and (min-width: 768px) {
    {% if section.settings.image_position == 'right' %}
      .shoplift--{{ section.id }}--content {
        grid-row: 1;
        grid-column: 1;
      }
    {% endif %}
  }

  .shoplift-image-alignment--{{ section.id }} {
    {% if image.aspect_ratio >= 1 %}
      width: 100%;
    {% else %}
      width: {{ image.aspect_ratio | times: 100 }}%;
    {% endif %}
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media screen and (min-width: 768px) {
    .shoplift--{{ section.id }}--image {
      display: grid;
      padding: {{ section.settings.image_padding | default: 0 }}px;
      overflow: hidden;
      {% if section.settings.image_position == "background" %}
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
      {% endif %}
    }
    {% if section.settings.image_position == "background" %}
      .shoplift--{{ section.id }}--image:before {
        background-color: #000;
        opacity: {{ section.settings.image_overlay_opacity | times: 0.01 }};
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        content: '';
        display: block;
      }
    {% endif %}
  }

  .shoplift--{{ section.id }}--content {
    {% if section.settings.image_position == "background" %}
      width: 100%;
    {% endif %}
    {% case section.settings.content_position %}
      {% when "top_left" %}
        align-items: start;
        justify-content: start;
      {% when "top_center" %}
        align-items: start;
        justify-content: center;
      {% when "top_right" %}
        align-items: start;
        justify-content: end;
      {% when "middle_left" %}
        align-items: center;
        justify-content: start;
      {% when "middle_center" %}
        align-items: center;
        justify-content: center;
      {% when "middle_right" %}
        align-items: center;
        justify-content: end;
      {% when "bottom_left" %}
        align-items: end;
        justify-content: start;
      {% when "bottom_center" %}
        align-items: end;
        justify-content: center;
      {% when "bottom_right" %}
        align-items: end;
        justify-content: end;
    {% endcase %}
  }

  .shoplift--{{ section.id }}--content-inner {
    max-width: 1024px;
    min-height: 350px;
    gap: 10px;
    display: grid;
    {% case section.settings.content_position %}
    {% when "top_left" %}
      padding: 24px {{ width_padding | times: 2 | minus: 5 }}% {{ height_padding | times: 2 | minus: 24 }}px 5%;
    {% when "top_center" %}
      padding: 24px {{ width_padding }}% {{ height_padding | times: 2 | minus: 24 }}px;
    {% when "top_right" %}
      padding: 24px 5% {{ height_padding | times: 2 | minus: 24 }}px {{ width_padding | times: 2 | minus: 5 }}%;
    {% when "middle_left" %}
      padding: {{ height_padding }}px {{ width_padding | times: 2 | minus: 5 }}% {{ height_padding }}px 5%;
    {% when "middle_center" %}
      padding: {{ height_padding }}px {{ width_padding }}%;
    {% when "middle_right" %}
      padding: {{ height_padding }}px 5% {{ height_padding }}px {{ width_padding | times: 2 | minus: 5 }}%;
    {% when "bottom_left" %}
      padding: {{ height_padding | times: 2 | minus: 24 }}px {{ width_padding | times: 2 | minus: 5 }}% 24px 5%;
    {% when "bottom_center" %}
      padding: {{ height_padding | times: 2 | minus: 24 }}px {{ width_padding }} 24px;
    {% when "bottom_right" %}
      padding: {{ height_padding | times: 2 | minus: 24 }}px 5% 24px {{ width_padding | times: 2 | minus: 5 }}%;
    {% endcase %}
  }

  .shoplift--{{ section.id }} .shoplift-hero-image-mobile {
    display: none;
  }

  @media screen and (max-width: 767px) {
    {% if section.settings.content_position != mobile_content_position %}
    .shoplift--{{ section.id }}--content {
      {% if mobile_image_position == "background" %}
        width: 100%;
      {% endif %}

      {% case mobile_content_position %}
        {% when "top_left" %}
          align-items: start;
          justify-content: start;
        {% when "top_center" %}
          align-items: start;
          justify-content: center;
        {% when "top_right" %}
          align-items: start;
          justify-content: end;
        {% when "middle_left" %}
          align-items: center;
          justify-content: start;
        {% when "middle_center" %}
          align-items: center;
          justify-content: center;
        {% when "middle_right" %}
          align-items: center;
          justify-content: end;
        {% when "bottom_left" %}
          align-items: end;
          justify-content: start;
        {% when "bottom_center" %}
          align-items: end;
          justify-content: center;
        {% when "bottom_right" %}
          align-items: end;
          justify-content: end;
      {% endcase %}
    }
    {% endif %}

    .shoplift--{{ section.id }}--content {
      overflow: hidden;
      padding: 0;
      min-height: unset;
    }

    .shoplift--{{ section.id }}--content-inner {
        {% case section.settings.mobile_content_position %}
          {% when "top_left" %}
            padding: {{ mobile_height_padding }}px {{ mobile_width_padding | times: 2 | minus: 5 }}% {{ mobile_height_padding | times: 2 }}px 5%;
          {% when "top_center" %}
            padding: {{ mobile_height_padding }}px {{ mobile_width_padding }}% {{ mobile_height_padding | times: 2 }}px;
          {% when "top_right" %}
            padding: {{ mobile_height_padding }}px 5% {{ mobile_height_padding | times: 2 }}px {{ mobile_width_padding | times: 2 | minus: 5 }}%;
          {% when "middle_left" %}
            padding: {{ mobile_height_padding }}px {{ mobile_width_padding | times: 2 | minus: 5 }}% {{ mobile_height_padding }}px 5%;
          {% when "middle_center" %}
            padding: {{ mobile_height_padding }}px {{ mobile_width_padding }}%;
          {% when "middle_right" %}
            padding: {{ mobile_height_padding }}px 5% {{ mobile_height_padding }}px {{ mobile_width_padding | times: 2 | minus: 5 }}%;
          {% when "bottom_left" %}
            padding: {{ mobile_height_padding | times: 2 }}px {{ mobile_width_padding | times: 2 | minus: 5 }}% {{ mobile_height_padding }}px 5%;
          {% when "bottom_center" %}
            padding: {{ mobile_height_padding | times: 2 }}px {{ mobile_width_padding }} {{ mobile_height_padding }}px;
          {% when "bottom_right" %}
            padding: {{ mobile_height_padding | times: 2 }}px 5% {{ mobile_height_padding }}px {{ mobile_width_padding | times: 2 | minus: 5 }}%;
        {% endcase %}
      margin: 0;
      min-height: auto;
    }

    .shoplift--{{ section.id }}--image {
      padding: {{ section.settings.mobile_image_padding | default: 0 }}px;
      min-height: 300px;

      {% if mobile_image_position == "background" %}
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
      {% endif %}
    }

    {% if mobile_image_position == "background" %}
      .shoplift--{{ section.id }}--image:before {
        background-color: #000;
        opacity: {{ section.settings.mobile_image_overlay_opacity | times: 0.01 }};
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        content: '';
        display: block;
      }
    {% endif %}

    {% if mobile_text_alignment != text_alignment %}
      .shoplift--{{ section.id }}--content {
        text-align: {{ mobile_text_alignment }}
      }
    {% endif %}

    .shoplift--{{ section.id }}.stacked {
      display: grid;
      grid-template-columns: 1fr;
    }

    .shoplift--{{ section.id }} .shoplift-hero-image-mobile {
      display: block;
    }

    .shoplift--{{ section.id }} .shoplift-hero-image-desktop {
      display: none;
    }
  }
</style>

{% capture sl--imagesection %}
  {% if image and image != empty %}
    {{ image
      | image_url:
        width: 1500
      | image_tag:
        class: image_class,
        alt: image.alt,
        tabindex: "-1",
        loading: 'lazy',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      | escape
    }}
  {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag: image_class }}
  {% endif %}
  {% if section.settings.mobile_image and section.settings.mobile_image != empty %}
    {{ section.settings.mobile_image
      | image_url:
        width: 1500
      | image_tag:
        class: mobile_image_class,
        alt: section.settings.mobile_image.alt,
        tabindex: "-1",
        loading: 'lazy',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      | escape
    }}
  {% endif %}
{% endcapture %}

{% capture sl--imagewithtext_contents %}
  <div class="shoplift--{{ section.id }}--content-inner">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {% when 'headline' %}
          {% render 'sl-image-hero__headline-1-1',
            section: section,
            block: block
          %}

        {% when 'subheadline' %}
          {% render 'sl-image-hero__subheadline-1-1',
            section: section,
            block: block
          %}

        {% when 'overline' %}
          {% render 'sl-image-hero__overline-1-1',
            section: section,
            block: block
          %}

        {% when 'button' %}
          {% if block.settings.anchor_bottom == true -%}
            {%- assign anchor_button_bottom = block -%}
            {% render 'sl-image-hero__button-1-1',
              section: section,
              class: 'sl-image-hero__anchor--desktop',
              block: block
            %}
          {%- else -%}
            {% render 'sl-image-hero__button-1-1',
              section: section,
              block: block
            %}
          {%- endif %}

        {% when 'reviews' %}
          {% render 'sl-image-hero__reviews-1-1',
            section: section,
            block: block
          %}

        {% when 'benefits' %}
          {% render 'sl-image-hero__benefits-1-1',
            section: section,
            block: block
          %}
        
        {% when 'countdown' %}
          {% render 'sl-image-hero__countdown-1-1',
            section: section,
            block: block
          %}

        {% when '@app' %}
          {% render block,
           section: section,
           block: block
        %}
      {%- endcase -%}
    {%- endfor -%}

    {% if anchor_button_bottom != empty %}
      {% render 'sl-image-hero__button-1-1',
        section: section,
        class: 'sl-image-hero__anchor--mobile',
        block: anchor_button_bottom
      %}
    {% endif %}
  </div>
{% endcapture %}

<section id="shoplift--{{ section.id }}"  class="shoplift--{{ section.id }} stacked sl-section">
  <div class="shoplift--{{ section.id }}--image">
    {{ sl--imagesection }}
  </div>
  <div class='shoplift--{{ section.id }}--content'>
    {{ sl--imagewithtext_contents }}
  </div>
</section>

