<script src="{{ 'skin-dictionary.js' | asset_url }}" defer="defer"></script>
{{ 'skin-dictionary.css' | asset_url | stylesheet_tag }}

<div class="skin-dictionary skin-dictionary--{{ section.id }} skin-dictionary--{{ section.settings.alignment }}"
  data-scroll-to-uid="{{ section.settings.uid }}">
  <div class="skin-dictionary__wrapper wrapper">
    <div class="skin-dictionary__content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.copy }}</p>
      <h3>{{ section.settings.heading_faqs }}</h3>
      <div class="skin-dictionary__faqs">
        {% if section.blocks.size > 0 %}
          <div class="skin-dictionary__faqs-container">
            {% for block in section.blocks %}
              <div class="skin-dictionary__faq {% if forloop.first %} active{% endif %}" data-accordion>
                <div class="skin-dictionary__faq-trigger">
                  <button id="skin-dictionary-faq-{{ section.id }}--{{ forloop.index }}"
                    title="{{ block.settings.question }}"
                    aria-label="{{ block.settings.question }}"
                    aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
                    aria-controls="skin-dictionary-faq-answer-{{ section.id }}--{{ forloop.index }}"
                    data-accordion-trigger>
                    <span>{{ block.settings.question }}</span>
                    <div aria-hidden>
                      {%- render 'icon-plus' -%}
                      {%- render 'icon-minus' -%}
                    </div>
                  </button>
                </div>
                <div id="skin-dictionary-faq-answer-{{ section.id }}--{{ forloop.index }}"
                  class="skin-dictionary__faq-content"
                  aria-labelledby="skin-dictionary-faq-{{ section.id }}--{{ forloop.index }}"
                  data-accordion-content>
                  <p>{{ block.settings.answer }}</p>
                  {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
                    <a href="{{ block.settings.cta_link }}">
                      {{- block.settings.cta_text -}}
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="btn btn--chocolate">
          {{- section.settings.cta_text -}}
        </a>
      {% endif %}
    </div>
    <div class="skin-dictionary__image">
      {% if section.settings.image_mobile != blank %}
        {% render 'responsive-image' with
          image: section.settings.image_mobile,
          max_width: 654,
          max_height: 482,
          wrapper_class: 'skin-dictionary__image-wrapper medium-up--hide'
        %}
      {% endif %}
      {% if section.settings.image_desktop != blank %}
        {% render 'responsive-image' with
          image: section.settings.image_desktop,
          max_width: 1294,
          max_height: 952,
          wrapper_class: 'skin-dictionary__image-wrapper small--hide'
        %}
      {% endif %}
    </div>
  </div>
</div>

