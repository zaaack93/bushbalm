<script src="{{ 'hc-featured-products.js' | asset_url }}" defer="defer"></script>
{{ 'featured-products.css' | asset_url | stylesheet_tag }}

<div class="featured-products featured-products--{{ section.id }} hc-custom-featured-products">
 {% if section.settings.heading != blank %}
      <div class="grid grid--table  mb-2">
          <div class="grid__item medium-up--12">
              <h3 class="text-center">{{ section.settings.heading }}</h3>
            </div>
      </div>
      {% endif %}
  <div class="featured-products__container">
     
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% render 'hc-collection-item' with product: product, block:block %}
    {% endfor %}
      
  </div>
  
</div>

