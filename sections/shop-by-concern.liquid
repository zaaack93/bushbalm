<script src="{{ 'shop-by-concern.js' | asset_url }}" defer="defer"></script>
{{ 'shop-by-concern.css' | asset_url | stylesheet_tag }}

<div class="shop-by-concern shop-by-concern--{{ section.id }}">
  <div class="wrapper">
    <div class="shop-by-concern__container">
      <div class="shop-by-concern__content">
        <div class="shop-by-concern__copy">
          {% if section.settings.heading != blank %}
            <h2 class="shop-by-concern__heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="shop-by-concern__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
          <div class="shop-by-concern__links swiper-container"
            data-shop-by-concern-links
            data-shop-by-concern-links-speed-mobile="{{ section.settings.speed_mobile }}"
            data-shop-by-concern-links-speed-desktop="{{ section.settings.speed_desktop }}"
            data-shop-by-concern-links-delay-mobile="{{ section.settings.delay_mobile }}"
            data-shop-by-concern-links-delay-desktop="{{ section.settings.delay_desktop }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <a href="{{ block.settings.cta_link }}"
                  class="shop-by-concern__link swiper-slide"
                  title="{{ block.settings.cta_text }}"
                  data-shop-by-concern-link>
                  {{- block.settings.cta_text -}}
                  <span>&nbsp;â†’</span>
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
      <div class="shop-by-concern__image">
        {% render 'responsive-image' with
          image: section.settings.image_mobile,
          max_width: 654,
          max_height: 654,
          wrapper_class: 'shop-by-concern__image-mobile'
        %}
        {% render 'responsive-image' with
          image: section.settings.image_desktop,
          max_width: 1838,
          max_height: 1356,
          wrapper_class: 'shop-by-concern__image-desktop'
        %}
      </div>
    </div>
  </div>
</div>

{% render 'custom-spacing' with
  section_name: 'shop-by-concern'
%}

