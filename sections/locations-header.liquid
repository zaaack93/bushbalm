<script src="{{ 'locations-header.js' | asset_url }}" defer="defer"></script>
{{ 'locations-header.css' | asset_url | stylesheet_tag }}

<div class="locations wrapper">
  <div class="locations__header">
    {% if section.settings.preheading != blank %}
      <p>{{ section.settings.preheading }}</p>
    {% endif %}
    <h1>{{ section.settings.heading | default: page.title }}</h1>
  </div>
</div>

{% schema %}
  {
    "name": "Locations Header",
    "settings": [
      {
        "type": "text",
        "id": "preheading",
        "label": "Preheading",
        "default": "Stockists"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Where to Buy Bushbalm"
      }
    ]
  }
{% endschema %}
