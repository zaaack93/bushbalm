<script src="{{ 'newsletter-signup.js' | asset_url }}" defer="defer"></script>
{{ 'newsletter-signup.css' | asset_url | stylesheet_tag }}

<div class="newsletter-signup newsletter-signup--{{ section.id }}">
  <div class="newsletter-signup__container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% render 'newsletter-form' with
      list_id: section.settings.klaviyo_list_id
    %}
  </div>
</div>

{% render 'custom-spacing' with
  section_name: 'newsletter-signup'
%}

