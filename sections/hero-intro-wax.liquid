<script src="{{ 'hero-intro.js' | asset_url }}" defer="defer"></script>
{{ 'hero-intro.css' | asset_url | stylesheet_tag }}

<div class="hero-intro hero-intro--{{ section.id }}" role="region" aria-label="Hero">
  <div class="hero-intro__wrapper hero-intro__wrapper--{{ section.settings.alignment }}">
    <div class="hero-intro__content">
      {% if section.settings.preheading != blank %}
        
      {% endif %}
      <p class="hero-intro__preheading">Last Update {{ article.updated_at | date: '%b %d, %Y' }}
</p>
      <h1 class="hero-intro__heading">   {{ article.title }} </h1>
              <div class="hero-intro__copy">Bushbalm Certified Spas</div>

      {% if section.settings.copy != blank %}
      {% endif %}
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="btn btn--chocolate">
          {{- section.settings.cta_text -}}
        </a>
      {% endif %}
    </div>
    <div class="hero-intro__image">
      
      {% if article.image %} {{ article | img_url: 'master' | img_tag: article.title }} {% endif %}
     
      
      {% if section.settings.image_mobile != blank %}
        {% render 'responsive-image' with
          image: section.settings.image_mobile,
          max_width: 654,
          max_height: 482,
          wrapper_class: 'hero-intro__image-wrapper medium-up--hide'
        %}
      {% endif %}
      {% if section.settings.image_desktop != blank %}
        {% render 'responsive-image' with
          image: section.settings.image_desktop,
          max_width: 1574,
          max_height: 1158,
          wrapper_class: 'hero-intro__image-wrapper small--hide'
        %}
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  .hero-intro--{{ section.id }} {
    --hero-intro-bg-color: {{ section.settings.bg_color }};
    --hero-intro-img-offset: {{ section.settings.image_offset }}px;
  }
{% endstyle %}

{% render 'custom-spacing' with
  section_name: 'hero-intro'
%}

