<script src="{{ 'who-we-are.js' | asset_url }}" defer="defer"></script>
{{ 'who-we-are.css' | asset_url | stylesheet_tag }}

<div class="who-we-are who-we-are--{{ section.id }}{% unless section.settings.full_width %} wrapper{% endunless %}">
  <div class="who-we-are__content">
    {% if section.settings.heading != blank %}
      <h2 class="who-we-are__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="who-we-are__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.image_mobile != blank %}
      <div class="who-we-are__image who-we-are__image--mobile">
        {% render 'responsive-image' with
          image: section.settings.image_mobile,
          max_width: 1025,
          max_height: 654,
          wrapper_class: 'who-we-are__image-wrapper'
        %}
      </div>
    {% endif %}
    {% if section.blocks.size > 0 %}
      {% if section.settings.list_heading != blank %}
        <h3>{{ section.settings.list_heading }}</h3>
      {% endif %}
      <div class="who-we-are__list">
        {% for block in section.blocks %}
          {% assign number_icon = 'number-' | append: forloop.index | append: '.svg' %}
          <div class="who-we-are__list-item">
            <img class="lazyload" src="{{ number_icon | asset_url }}"
              alt="{{ 'general.accessibility.number_icon' | t: number: forloop.index }}"
              data-src="{{ number_icon | asset_url }}">
            <p>{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="btn" title="{{ section.settings.cta_text }}">
        {{- section.settings.cta_text -}}
      </a>
    {% endif %}
  </div>
  <div class="who-we-are__image who-we-are__image--desktop">
    {% render 'responsive-image' with
      image: section.settings.image_desktop,
      max_width: 1840,
      max_height: 1356,
      wrapper_class: 'who-we-are__image-wrapper'
    %}
  </div>
</div>

{% render 'custom-spacing' with
  section_name: 'who-we-are'
%}

